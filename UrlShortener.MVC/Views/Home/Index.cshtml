@{
    ViewData["Title"] = "URL Shortener";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/homeIndex.css" />
<script src="~/js/homeIndex.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="url-shortener-container container mt-5 p-4 border rounded shadow-sm bg-white">
    <h2 class="text-center mb-4 fw-bold">Shorten a URL</h2>

    <div class="mb-3">
        <label for="longUrl" class="form-label">Enter The URL:</label>
        <input type="text" id="longUrl" class="form-control" placeholder="e.g https://xyz.com" />
    </div>

    <button id="shortenBtn" class="btn btn-primary w-100 fw-semibold">Shorten Url</button>
    <div id="result" class="mt-3"></div>
</div>